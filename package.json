{
  "name": "lerna-monorepo",
  "private": true,
  "version": "0.0.0-development",
  "description": "In-memory MongoDB Server. Designed with testing in mind, the server will allow you to connect your favourite ODM or client library to the MongoDB Server and run integration tests isolated from each other.",
  "repository": "https://github.com/nodkz/mongodb-memory-server",
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@types/mongodb": "^3.3.6",
    "@types/node": "^12.11.2",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "flowgen": "^1.10.0",
    "jest": "^24.9.0",
    "lerna": "^3.18.2",
    "mongodb": "^3.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "test": "lerna run test --stream",
    "lint": "lerna run lint --stream",
    "watch": "jest --watch",
    "build": "tsc --build tsconfig.build.json",
    "release": "yarn build && lerna publish",
    "postinstall": "yarn build"
  }
}
